// 頂層元素
div.fixed-group
  position fixed
  overflow visible
  z-index 1
  left calc((100vw - min(100vw, 750px))/2)

// logo
img.logo
  position absolute
  width vw(131)
  top vw(25)
  left vw(28)

// 讀檔遮罩
div.full-screen-loading
  $loading_size = vw(225);
  position fixed
  // border 1px red solid
  // min-width 100vw
  // min-height 100vh
  min-width 100%
  min-height 100%
  background-color rgba(#5e3a23, 0.5)
  backdrop-filter blur(3px)
  z-index 2000
  &:before
    content ' '
    position absolute
    width "calc(%s - 6px)" % $loading_size
    height "calc(%s - 6px)" % $loading_size
    top "calc(50% - %s/2 + 3px)" % $loading_size
    left "calc(50% - %s/2 + 3px)" % $loading_size
    border-radius 9999px
    border-style solid
    border-width 5px
    border-color white white transparent transparent
    animation loading-rotate .7s linear 0s infinite normal
    // background url('~@/assets/img_Nescafe/loading.png') no-repeat
    // background-size cover
    // background-position center
  &:after
    content ' '
    position absolute
    width "calc(%s - 6px)" % $loading_size
    height "calc(%s - 6px)" % $loading_size
    top "calc(50% - %s/2 + 3px)" % $loading_size
    left "calc(50% - %s/2 + 3px)" % $loading_size
    // transform translate(-50%, -50%)
    border-radius 9999px
    border-style solid
    border-width 5px
    opacity .8
    border-color transparent transparent red red
    animation loading-rotate 1s linear 0s infinite normal
  @keyframes loading-rotate
    0%
      transform rotate(0)
    50%
      // opacity .5
      transform rotate(-180deg)
    100%
      transform rotate(-360deg)
  span.loading-message
    position absolute
    color #5d1d11
    font-size 1.2em
    font-weight bold
    top "calc(50% + %s * .75)" % $loading_size
    left 50%
    transform translate(-50%, -50%)
    white-space nowrap
    &:after
      content '.'
      position absolute
      left 100%
      animation loading-message-after 1.5s linear 0s infinite normal
      @keyframes loading-message-after
        0%
          content ' '
        20%
          content '.'
        40%
          content '..'
        60%
          content '...'
        80%
          content '....'
        100%
          content ' '

$transition_duration = .5s

// 提醒遮罩
div.full-screen-notification
  position fixed
  min-width 100vw
  min-height 100vh
  // background-color rgba(#5e3a23, 0.9)
  backdrop-filter blur(5px)